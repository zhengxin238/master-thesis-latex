%%% ------------------------------------------------------ &Definitions ---

%% if we do use LuaTeX, just load the Stone fonts directly.  As the
%% user requested to load this fonts, we trust the user and don't
%% check for the existence of the fonts itself.
\ifluatex%
%  \RequirePackage{luatex}
%  \RequirePackage{unicode-math}
  \RequirePackage{fontspec}
  %% Setup the usage of StoneSerif and StoneSans as default fonts.
  %%TODO What shall we do with typewriter and math fonts?
  \setmainfont{StoneSerITCStd-Medium.otf}[%
         Ligatures      = TeX,%
         % Numbers        = OldStyle,%
         Scale          = MatchLowercase,%
         BoldFont       = StoneSerITCStd-SemiBold.otf,%
         ItalicFont     = StoneSerITCStd-MediumIta.otf,%
         BoldItalicFont = StoneSerITCStd-SemiBoldIta.otf%
         ]%
  \setsansfont{StoneSansITCStd-Medium.otf}[%
         Ligatures      = TeX,%
         % Numbers        = OldStyle,%
         Scale          = MatchLowercase,%
         BoldFont       = StoneSansITCStd-SemiBold.otf,%
         ItalicFont     = StoneSansITCStd-MediumIta.otf,%
         BoldItalicFont = StoneSansITCStd-SemiBoldIta.otf%
         ]%
  %% Provide the correct glyphens for quotes.
  \ProvideTextCommand{\glqq}{EU2}{%
    \textormath{\quotedblbase}{\mbox{\quotedblbase}}}%
  \ProvideTextCommand{\grqq}{EU2}{%
    \textormath{\textquotedblleft}{\mbox{\textquotedblleft}}}%
  \ProvideTextCommand{\glq}{EU2}{%
    \textormath{\quotesinglbase}{\mbox{\quotesinglbase}}}%
  \ProvideTextCommand{\grq}{EU2}{%
    \textormath{\textquoteleft}{\mbox{\textquoteleft}}}%
  \ProvideTextCommand{\flqq}{EU2}{%
    \textormath{\guillemotleft}{\mbox{\guillemotleft}}}%
  \ProvideTextCommand{\frqq}{EU2}{%
    \textormath{\guillemotright}{\mbox{\guillemotright}}}%
  \ProvideTextCommand{\flq}{EU2}{%
    \textormath{\guilsinglleft}{\mbox{\guilsinglleft}}}%
  \ProvideTextCommand{\frq}{EU2}{%
    \textormath{\guilsinglright}{\mbox{\guilsinglright}}}%
\fi%




